@{
}
@model RolActualizarModel
<h3>Eliminar Rol</h3>
<hr />
<p>¿Estas seguro de Eliminar al rol: @Model.Nombre?</p>
<div class="card">
    <div class="card-body">
        <form action="EliminarRol" method="post">
            <input asp-for="Id" type="hidden" />

            <a asp-controller="Roles" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="bi bi-trash"></i></button>
        </form>
    </div>
</div>
